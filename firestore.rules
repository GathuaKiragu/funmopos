rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fixtures 
    // PROD: Only Admin/Server should write. Clients only read.
    match /fixtures/{fixtureId} {
      allow read: if true;
      allow write: if false; // Only manageable via Firebase Admin SDK or Server-Side routes
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
