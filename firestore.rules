rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fixtures 
    // DEV MODE: Allow any auth user to write (to simulate the caching mechanism working from the client)
    // PROD: Only Admin or Cloud Functions should write
    match /fixtures/{fixtureId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
